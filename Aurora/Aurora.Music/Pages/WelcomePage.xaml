                           Margin="8,4" Text="Before You Start"/>
                <Frame Grid.Row="1" x:Name="AddFolderFrame"/>
                <Button Grid.Row="2" Padding="12,4" Margin="16" x:Name="Skip" Click="Skip_Click"
                        HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Style="{ThemeResource ButtonRevealStyle}">
                    <Button.Content>
                        <TextBlock x:Uid="Skip" Text="Skip" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    </Button.Content>
                </Button>
                <Button Grid.Row="3" Padding="12,4" Margin="16" Click="Button_Click" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Style="{ThemeResource ButtonRevealStyle}">
                    <Button.Content>
                        <TextBlock x:Uid="WelcomeNext" Text="Next" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    </Button.Content>
                </Button>
            </Grid>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Uid="WelcomeTitle4" Style="{ThemeResource SubheaderTextBlockStyle}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           Margin="8,4" Text="Wait for a While..."/>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                            Orientation="Vertical" Grid.Row="1">
                    <TextBlock Text="{x:Bind Context.Hint, Mode=OneWay}" Style="{ThemeResource SubtitleTextBlockStyle}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4"/>
                    <Grid Margin="12" Height="4" MaxWidth="640" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <ProgressBar Background="#33FFFFFF" Value="{x:Bind Context.Progress, Mode=OneWay}"
                                     Minimum="0" Maximum="100"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                    <Button Grid.Row="2" Padding="12,4" Margin="16" Click="Finish_Click" Opacity="{x:Bind Context.Finish,Mode=OneWay}"
                        HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Style="{ThemeResource ButtonRevealStyle}">
                        <Button.Content>
                            <TextBlock Text="Let's Rock!" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </FlipView>
        <ProgressBar HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                     Height="4" Background="{ThemeResource SystemControlBackgroundListLowBrush}" 
                     Foreground="{ThemeResource SystemControlForegroundAccentBrush}"
                     Maximum="100" Minimum="0" Value="{x:Bind IndexToProgress(Main.SelectedIndex),Mode=OneWay}"/>
    </Grid>
</Page>
