            </Storyboard>
        </Grid.Resources>
        
        <ParallaxView Source="{x:Bind Main}" HorizontalShift="500">
            <Grid>
                <Image x:Name="WelcomBG" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill">
