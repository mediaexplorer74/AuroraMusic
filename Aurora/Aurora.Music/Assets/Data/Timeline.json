{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "backgroundImage": "$bg",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "$title",
                    "weight": "bolder",
                    "size": "medium"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "$bg",
                                    "size": "small"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "$col0",
                                    "weight": "bolder",
                                    "wrap": true,
                                    "maxLines": 1
                                },
                                {
                                    "type": "TextBlock",
                                    "spacing": "none",
                                    "text": "$desc0",
                                    "isSubtle": true,
                                    "wrap": true,
                                    "maxLines": 1
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "$img",
                                    "size": "small"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "$col1",
                                    "weight": "bolder",
                                    "wrap": true,
                                    "maxLines": 1
                                },
                                {
                                    "type": "TextBlock",
                                    "spacing": "none",
                                    "text": "$desc1",
                                    "isSubtle": true,
                                    "wrap": true,
                                    "maxLines": 1
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
